<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!--  标题文字的风格 -->
    <style name="title_text">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffcccccc</item>
    </style>
    
    <style name="paper_title">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="time_left">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffaaaaaa</item>
    </style>
    
    
    <style name="question_trunk">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="question_branches">
        <item name="android:background">#eeeeee</item>
    </style>
    
   	<style name="answerview">
        <item name="android:background">@drawable/answerview_bg</item>
        <item name="android:textColor">@drawable/answerview_text</item>
        <item name="android:gravity">center</item>
    </style>

   	<style name="option_btn_multi">
   	    <item name="android:button">@drawable/option_btn_multi</item>
   	</style>
   	
   	<style name="option_btn_single">
   	    <item name="android:button">@drawable/option_btn_single</item>
   	</style>
   	
   	<style name="button">
   	    <item name="android:background">@drawable/button_bg</item>
   	    <item name="android:textColor">#ffffffff</item>
   	    <item name="android:layout_marginLeft">10dp</item>
   	    <item name="android:layout_marginRight">10dp</item>
   	</style>
   	
</resources>
