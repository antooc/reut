<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >
    
        
    <ImageButton
	        android:id="@android:id/home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bar_back"
	        android:contentDescription="@string/questions"
	        android:background="@null"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"/>

    <!-- title  -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@android:id/home"
        android:gravity="center_vertical"
        android:singleLine="true"
        style="@style/title_text"
        android:ellipsize="marquee" />
    
    
   	<!-- show time left -->
   	<TextView 
        android:id="@+id/time_left"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:layout_gravity="right|center_vertical"
        style="@style/time_left"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" 
        android:layout_alignParentRight="true"/>
   	
   	
    <!--  show questions -->
   	<ImageButton
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_questions"
        android:contentDescription="@string/questions"
        android:background="@null"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/time_left" />
    
    <!--  mark -->
    <CheckBox
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mark_bg"
        android:button="@null"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/questions"/>

	    
    
    

</RelativeLayout>
