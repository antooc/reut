	<item android:state_pressed="true" android:state_checked="false" android:state_selected="true" android:drawable= "@drawable/answermark_pressed" />
	<item android:state_checked="false" android:state_selected="true" android:drawable= "@drawable/answer_unmark" />  
	<!--有答案有标记-->  
	<item android:state_pressed="true" android:state_checked="true" android:state_selected="true"  android:drawable= "@drawable/answermark_pressed" />
	<item android:state_checked="true" android:state_selected="true"  android:drawable= "@drawable/answer_mark" />
