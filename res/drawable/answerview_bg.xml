<selector xmlns:android="http://schemas.android.com/apk/res/android" >   

	<!-- 无答案有标记 -->  
	<item android:state_pressed="true" android:state_checked="true" android:state_selected="false" android:drawable= "@drawable/answermark_pressed" />
	<item android:state_checked="true" android:state_selected="false" android:drawable= "@drawable/noanswer_mark" /> 
